generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model favoritefonts {
  id_font         Int         @id @default(autoincrement())
  user_id         Int
  font_name       String      @db.VarChar(100)
  font_variations Int?
  font_type       String?
  users           users       @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  fontlinks       fontlinks[]
}

model fontlinks {
  id_link       Int            @id @default(autoincrement())
  font_link     String
  font_id       Int
  favoritefonts favoritefonts? @relation(fields: [font_id], references: [id_font], onDelete: Cascade, onUpdate: NoAction)
}

model users {
  id            Int             @id @default(autoincrement())
  name          String?         @db.VarChar(100)
  email         String          @unique
  password      String?
  google_id     String?         @unique  
  photo         String?
  plan_type     String?         @db.VarChar(100)
  favoritefonts favoritefonts[]
}
